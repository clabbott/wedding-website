<section id="rsvp" class="py-20 md:py-32 bg-white">
  <div class="container mx-auto px-4 max-w-2xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        RSVP
      </h2>
      <div class="w-24 h-1 bg-primary-500 mx-auto mb-6"></div>
      <p class="text-neutral-600 text-lg">
        We can't wait to celebrate with you! Please let us know if you'll be joining us.
      </p>
    </div>
    
    <form class="bg-neutral-50 rounded-2xl shadow-lg p-8 md:p-12 space-y-6">
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label for="firstName" class="block text-sm font-semibold text-neutral-700 mb-2">
            First Name *
          </label>
          <input 
            type="text" 
            id="firstName" 
            name="firstName" 
            required
            class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition"
          />
        </div>
        <div>
          <label for="lastName" class="block text-sm font-semibold text-neutral-700 mb-2">
            Last Name *
          </label>
          <input 
            type="text" 
            id="lastName" 
            name="lastName" 
            required
            class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition"
          />
        </div>
      </div>
      
      <div>
        <label for="email" class="block text-sm font-semibold text-neutral-700 mb-2">
          Email Address *
        </label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition"
        />
      </div>
      
      <div>
        <label class="block text-sm font-semibold text-neutral-700 mb-3">
          Will you be attending? *
        </label>
        <div class="space-y-3">
          <label class="flex items-center cursor-pointer">
            <input 
              type="radio" 
              name="attendance" 
              value="yes" 
              class="w-5 h-5 text-primary-600 focus:ring-primary-500"
              required
            />
            <span class="ml-3 text-neutral-700">Joyfully accepts</span>
          </label>
          <label class="flex items-center cursor-pointer">
            <input 
              type="radio" 
              name="attendance" 
              value="no" 
              class="w-5 h-5 text-primary-600 focus:ring-primary-500"
            />
            <span class="ml-3 text-neutral-700">Regretfully declines</span>
          </label>
        </div>
      </div>
      
      <div>
        <label for="guests" class="block text-sm font-semibold text-neutral-700 mb-2">
          Number of Guests
        </label>
        <select 
          id="guests" 
          name="guests"
          class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition"
        >
          <option value="1">1 Guest</option>
          <option value="2">2 Guests</option>
          <option value="3">3 Guests</option>
          <option value="4">4 Guests</option>
        </select>
      </div>
      
      <div>
        <label for="dietary" class="block text-sm font-semibold text-neutral-700 mb-2">
          Dietary Restrictions
        </label>
        <textarea 
          id="dietary" 
          name="dietary" 
          rows="3"
          placeholder="Please let us know of any dietary restrictions or allergies"
          class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition resize-none"
        ></textarea>
      </div>
      
      <div>
        <label for="message" class="block text-sm font-semibold text-neutral-700 mb-2">
          Message to the Couple
        </label>
        <textarea 
          id="message" 
          name="message" 
          rows="4"
          placeholder="Share your well wishes or any special requests"
          class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition resize-none"
        ></textarea>
      </div>
      
      <button 
        type="submit"
        class="w-full bg-primary-600 text-white py-4 rounded-lg font-semibold text-lg hover:bg-primary-700 transition-all transform hover:scale-[1.02] shadow-lg"
      >
        Submit RSVP
      </button>
    </form>
    
    <p class="text-center text-neutral-500 text-sm mt-6">
      * Required fields
    </p>
  </div>
</section>

<script>
  const form = document.querySelector('form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Thank you for your RSVP! In a production site, this would submit to a backend service.');
    form.reset();
  });
</script>
