<section id="details" class="py-20 md:py-32 bg-gradient-to-b from-white to-neutral-50">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        Wedding Details
      </h2>
      <div class="w-24 h-1 bg-primary-500 mx-auto"></div>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- Ceremony Card -->
      <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full mb-6 mx-auto">
          <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-serif font-semibold text-center text-neutral-900 mb-4">
          Ceremony
        </h3>
        <div class="space-y-3 text-center">
          <p class="text-neutral-700">
            <span class="font-semibold">Date:</span> Saturday, August 8, 2026
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Time:</span> 4:00 PM
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Location:</span><br/>
            St. George's Episcopal Church<br/>
            915 N Oakland St<br/>
            Arlington, VA 22203
          </p>
        </div>
      </div>
      
      <!-- Reception Card -->
      <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-center w-16 h-16 bg-accent-100 rounded-full mb-6 mx-auto">
          <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-serif font-semibold text-center text-neutral-900 mb-4">
          Reception
        </h3>
        <div class="space-y-3 text-center">
          <p class="text-neutral-700">
            <span class="font-semibold">Date:</span> Saturday, August 8, 2026
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Time:</span> 6:00 PM - 11:00 PM
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Location:</span><br/>
            Same Venue<br/>
            Dinner, Dancing & Celebration
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
