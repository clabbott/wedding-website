<section id="registry" class="py-20 md:py-32 bg-gradient-to-b from-neutral-50 to-white">
  <div class="container mx-auto px-4 max-w-4xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        Gift Registry
      </h2>
      <div class="w-24 h-1 bg-primary-500 mx-auto mb-6"></div>
      <p class="text-neutral-600 text-lg max-w-2xl mx-auto">
        Your presence at our wedding is the greatest gift of all. However, if you wish to 
        honor us with a gift, we're registered at:
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto mb-12">
      <!-- Bed Bath & Beyond -->
      <a 
        href="https://bedbathandbeyond.myregistry.com/wedding-registry/katie-wenger-and-clark-abbott-arlington-va/5064252" 
        target="_blank"
        rel="noopener noreferrer"
        class="block bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all transform hover:scale-105 h-full flex flex-col"
      >
        <div class="flex-grow flex items-center justify-center mb-6">
          <img 
            src="https://1000logos.net/wp-content/uploads/2017/08/Font-Bed-Bath-and-Beyond-Logo.jpg" 
            alt="Bed Bath & Beyond" 
            class="h-16 object-contain"
            loading="lazy"
          />
        </div>
        <div class="text-center mt-auto">
          <p class="text-neutral-600 text-sm mb-2">Gift Registry</p>
          <span class="text-primary-600 font-medium hover:underline">View →</span>
        </div>
      </a>
      
      <!-- WithJoy Cash Registry -->
      <a 
        href="https://withjoy.com/katie-and-clark-aug-26/registry" 
        target="_blank"
        rel="noopener noreferrer"
        class="block bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all transform hover:scale-105 h-full flex flex-col border-2 border-primary-100"
      >
        <div class="flex-grow flex items-center justify-center mb-6">
          <img 
            src="https://withjoy.com/assets/public/marcom-prod/common/brand/png_purple5/logo_xl.png" 
            alt="WithJoy" 
            class="h-16 object-contain"
            loading="lazy"
          />
        </div>
        <div class="text-center mt-auto">
          <p class="text-neutral-600 text-sm mb-2">Cash Registry</p>
          <span class="text-primary-600 font-medium hover:underline">View →</span>
        </div>
      </a>
    </div>
  </div>
</section>
