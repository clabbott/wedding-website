---
import FlowerDecoration from './FlowerDecoration.astro';
---

<section id="home" class="relative min-h-screen flex items-center justify-center py-16 overflow-hidden">
  <!-- Background with gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-100 via-accent-50 to-primary-50"></div>
  
  <!-- Decorative elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-10 w-64 h-64 bg-primary-300 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-300 rounded-full blur-3xl"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 text-center px-4 pt-8 md:pt-12">
    <!-- Image Container with Flowers -->
    <div class="relative max-w-4xl mx-auto mb-4 md:mb-6">
      <!-- Left Flower - Desktop -->
      <div class="hidden md:block" style="opacity: 1 !important;">
        <FlowerDecoration position="left" size="lg" rotate={-90} class="opacity-100" />
      </div>
      
      <!-- Centerpiece Image -->
      <div class="relative w-64 h-64 sm:w-72 sm:h-72 md:w-80 md:h-80 lg:w-96 lg:h-96 mx-auto rounded-full overflow-hidden border-4 border-white shadow-xl">
        <img  
          src="/wedding-website/images/Center.jpg" 
          alt="Katie & Clark" 
          class="w-full h-full object-cover"
          loading="eager"
        />
      </div>
      
      <!-- Right Flower - Desktop -->
      <div class="hidden md:block" style="opacity: 1 !important;">
        <FlowerDecoration position="right" size="lg" rotate={90} flipX class="opacity-100" />
      </div>
    </div>
    
    <h1 class="font-script text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-[#560082] mb-4 md:mb-6">
      Katie & Clark
    </h1>
    <div class="flex items-center justify-center gap-4 mb-8">
      <div class="h-px w-16 bg-[#560082]"></div>
      <p class="text-2xl md:text-3xl font-serif text-neutral-700">
        August 8, 2026
      </p>
      <div class="h-px w-16 bg-[#560082]"></div>
    </div>
    <p class="text-lg md:text-xl text-neutral-600 mb-12">
      Arlington, Virginia
    </p>
    <a 
      href="#rsvp" 
      class="inline-block bg-[#560082] text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-[#45006b] transition-all transform hover:scale-105 shadow-lg"
    >
      RSVP Now
    </a>
  </div>
</section>
