---
import FlowerDecoration from './FlowerDecoration.astro';
import CollapsibleSection from './CollapsibleSection.astro';
---

<section id="hotels" class="relative py-20 bg-white overflow-hidden">
  <!-- Top Left Flower - Desktop -->
  <FlowerDecoration position="top-left" size="lg" rotate={-12} class="hidden md:block" />
  
  <!-- Top Left Flower - Mobile -->
  <FlowerDecoration position="top-left" size="md" rotate={-30} class="md:hidden" />
  
  <!-- Top Right Flower - Desktop -->
  <FlowerDecoration position="top-right" size="lg" rotate={12} flipX class="hidden md:block" />
  
  <!-- Top Right Flower - Mobile -->
  <FlowerDecoration position="top-right" size="md" rotate={30} flipX class="md:hidden" />
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        Hotel Blocks
      </h2>
      <div class="w-24 h-1 bg-[#560082] mx-auto mb-6"></div>
      <p class="text-neutral-600 max-w-2xl mx-auto">
        We've reserved room blocks at these nearby hotels. Book early to secure the special rate for our wedding guests.
      </p>
      <div class="mt-4 bg-[#560082]/10 border-l-4 border-[#560082] p-4 max-w-2xl mx-auto">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-primary-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" fill="#560082"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-[#560082]">
              <span class="font-semibold">Cut-off date for group rate:</span> June 27, 2026
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-8 mt-12">
      <!-- Hotel 1 -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="h-48 overflow-hidden">
          <img 
            src="/wedding-website/images/HiltonArlington.png" 
            alt="Hilton Arlington" 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-serif font-bold text-neutral-900 mb-2">Hilton Arlington</h3>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p>950 N Stafford St, Arlington, VA 22203</p>
          </div>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <p>(703) 528-6000</p>
          </div>
          <div class="mt-4">
            <div class="flex flex-wrap items-center justify-center gap-4">
              <span class="inline-block bg-[#560082]/10 text-[#560082] text-sm font-semibold px-3 py-1 rounded-full whitespace-nowrap">
                Special Rate: $139/night
              </span>
              <a 
                href="https://www.hilton.com/en/attend-my-event/dcavahf-kcw-4a7db1db-14c9-4979-a5af-fcd19626a6f8/" 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex-shrink-0 flex items-center justify-center px-6 py-2 border border-transparent text-base font-medium rounded-full text-white bg-[#560082] hover:bg-[#45006e] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#560082] transition-colors"
              >
                Book Rooms
              </a>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-100">
              <h4 class="font-medium text-gray-700 mb-2">Recommended for these guests:</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• Wengers</li>
                <li>• Barshes</li>
                <li>• Berners</li>
                <li>• Kays</li>
                <li>• Friends and Family Friends</li>
              </ul>
              <CollapsibleSection title="More Details">
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>• <span class="font-medium">Parking:</span> $22 per night</li>
                  <li>• <span class="font-medium">Breakfast:</span> Not included but available for an extra cost at the on-site restaurant, Dan & Brad's</li>
                  <li>• Panera across the street; Harris Teeter and many cafes and restaurants within walking distance</li>
                  <li>• 1 min walk from Ballston metro stop on the Orange and Silver line</li>
                  <li>• 30 min metro ride from Reagan airport; 45 min metro ride from Dulles airport</li>
                </ul>
              </CollapsibleSection>
            </div>
          </div>
        </div>
      </div>

      <!-- Hotel 2 - The Bethesdan Hotel by Hilton -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="h-48 overflow-hidden">
          <img 
            src="/wedding-website/images/bethesdan_hotel.jpg" 
            alt="The Bethesdan Hotel by Hilton" 
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-serif font-bold text-neutral-900 mb-2">The Bethesdan Hotel by Hilton</h3>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="text-sm">8120 Wisconsin Ave, Bethesda, MD 20814</p>
          </div>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <p>(301) 652-2000</p>
          </div>
          <div class="mt-4">
            <div class="flex flex-wrap items-center justify-center gap-4">
              <span class="inline-block bg-[#560082]/10 text-[#560082] text-sm font-semibold px-3 py-1 rounded-full whitespace-nowrap">
                Special Rate: $128/night
              </span>
              <a 
                href="https://www.hilton.com/en/book/reservation/rooms/?ctyhocn=WASBAUP&arrivalDate=2026-08-07&departureDate=2026-08-09&groupCode=500&room1NumAdults=1&cid=OM%2CWW%2CHILTONLINK%2CEN%2CDirectLink" 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex-shrink-0 flex items-center justify-center px-6 py-2 border border-transparent text-base font-medium rounded-full text-white bg-[#560082] hover:bg-[#45006e] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#560082] transition-colors"
              >
                Book Rooms
              </a>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-100">
              <h4 class="font-medium text-gray-700 mb-2">Recommended for these guests:</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• Abbotts</li>
                <li>• Craigs</li>
                <li>• Jensens</li>
              </ul>
              <CollapsibleSection title="More Details">
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>• <span class="font-medium">Parking:</span> $40 per night</li>
                  <li>• Cheaper parking available at <a href="https://maps.app.goo.gl/UsLoG8QFP7wSvJrK9" target="_blank" rel="noopener noreferrer" class="text-[#560082] hover:underline">Montgomery County Garage 35</a> across the street</li>
                  <li>• <span class="font-medium">Breakfast:</span> Not included but available for an extra cost at the on-site restaurant and cafe</li>
                  <li>• Harris Teeter, Trader Joe's, and several restaurants within walking distance</li>
                  <li>• 10 minute walk from Bethesda metro stop on the Red Line</li>
                  <li>• 1 hour metro ride from Reagan airport; 1.5 hour metro from Dulles airport</li>
                </ul>
              </CollapsibleSection>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Left Flower - Desktop -->
    <FlowerDecoration position="bottom-left" size="lg" rotate={180} class="hidden md:block" />
    
    <!-- Bottom Left Flower - Mobile -->
    <FlowerDecoration position="bottom-left" size="md" rotate={-150} class="md:hidden" />
    
    <!-- Bottom Right Flower - Desktop -->
    <FlowerDecoration position="bottom-right" size="lg" rotate={180} flipX class="hidden md:block" />
    
    <!-- Bottom Right Flower - Mobile -->
    <FlowerDecoration position="bottom-right" size="md" rotate={150} flipX class="md:hidden" />
  </div>
</section>
