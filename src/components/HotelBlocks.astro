---
import FlowerDecoration from './FlowerDecoration.astro';
---

<section id="hotels" class="relative py-20 bg-white overflow-hidden">
  <!-- Top Left Flower - Desktop -->
  <FlowerDecoration position="top-left" size="lg" rotate={-12} class="hidden md:block" />
  
  <!-- Top Left Flower - Mobile -->
  <FlowerDecoration position="top-left" size="md" rotate={-30} class="md:hidden" />
  
  <!-- Top Right Flower - Desktop -->
  <FlowerDecoration position="top-right" size="lg" rotate={12} flipX class="hidden md:block" />
  
  <!-- Top Right Flower - Mobile -->
  <FlowerDecoration position="top-right" size="md" rotate={30} flipX class="md:hidden" />
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        Hotel Blocks
      </h2>
      <div class="w-24 h-1 bg-[#560082] mx-auto mb-6"></div>
      <p class="text-neutral-600 max-w-2xl mx-auto">
        We've reserved room blocks at these nearby hotels. Book early to secure the special rate for our wedding guests.
      </p>
      <div class="mt-4 bg-[#560082]/10 border-l-4 border-[#560082] p-4 max-w-2xl mx-auto">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-primary-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" fill="#560082"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-[#560082]">
              <span class="font-semibold">Cut-off date for group rate:</span> June 27, 2026
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-8 mt-12">
      <!-- Hotel 1 -->
      <a 
        href="https://www.hilton.com/en/attend-my-event/dcavahf-kcw-4a7db1db-14c9-4979-a5af-fcd19626a6f8/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="group block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all overflow-hidden hover:ring-2 hover:ring-[#560082] focus:outline-none focus:ring-2 focus:ring-[#560082] hover:bg-[#560082]/10"
      >
        <div class="h-48 overflow-hidden">
          <img 
            src="/wedding-website/images/HiltonArlington.png" 
            alt="Hilton Arlington" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-serif font-bold text-neutral-900 mb-2">Hilton Arlington</h3>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p>950 N Stafford St, Arlington, VA 22203</p>
          </div>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <p>(703) 528-6000</p>
          </div>
          <div class="mt-4">
            <span class="inline-block bg-[#560082]/10 text-[#560082] text-sm font-semibold px-3 py-1 rounded-full mb-4">
              Special Rate: $139/night
            </span>
            <div class="mt-4 pt-4 border-t border-gray-100">
              <h4 class="font-medium text-gray-700 mb-2">Recommended at this location:</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• Wengers</li>
                <li>• Barshes</li>
                <li>• Berners</li>
                <li>• Kays</li>
                <li>• Family Friends</li>
                <li>• Friends</li>
              </ul>
            </div>
          </div>
        </div>
      </a>

      <!-- Hotel 2 -->
      <a 
        href="" 
        target="_blank" 
        rel="noopener noreferrer"
        class="group block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all overflow-hidden hover:ring-2 hover:ring-[#560082] focus:outline-none focus:ring-2 focus:ring-[#560082] hover:bg-[#560082]/10"
      >
        <div class="h-48 overflow-hidden">
          <img 
            src="" 
            alt="TBD" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-serif font-bold text-neutral-900 mb-2">TBD</h3>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p>Address</p>
          </div>
          <div class="flex items-center text-neutral-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#560082]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <p>Phone</p>
          </div>
          <div class="mt-4">
            <span class="inline-block bg-[#560082]/10 text-[#560082] text-sm font-semibold px-3 py-1 rounded-full mb-4">
              Special Rate: TBD/night
            </span>
            <div class="mt-4 pt-4 border-t border-gray-100">
              <h4 class="font-medium text-gray-700 mb-2">Recommended at this location:</h4>
              <ul class="text-sm text-gray-600 space-y-1">
                <li>• Abbotts</li>
                <li>• Craigs</li>
                <li>• Jensens</li>
              </ul>
            </div>
          </div>
        </div>
      </a>
    </div>
    
    <!-- Bottom Left Flower - Desktop -->
    <FlowerDecoration position="bottom-left" size="lg" rotate={180} class="hidden md:block" />
    
    <!-- Bottom Left Flower - Mobile -->
    <FlowerDecoration position="bottom-left" size="md" rotate={-150} class="md:hidden" />
    
    <!-- Bottom Right Flower - Desktop -->
    <FlowerDecoration position="bottom-right" size="lg" rotate={180} flipX class="hidden md:block" />
    
    <!-- Bottom Right Flower - Mobile -->
    <FlowerDecoration position="bottom-right" size="md" rotate={150} flipX class="md:hidden" />
  </div>
</section>
