---
import FlowerDecoration from './FlowerDecoration.astro';
---

<section id="rsvp" class="relative py-20 overflow-hidden">
  <!-- Top Left Flower - Desktop -->
  <FlowerDecoration position="top-left" size="lg" rotate={-12} class="hidden md:block" />
  
  <!-- Top Left Flower - Mobile -->
  <FlowerDecoration position="top-left" size="md" rotate={-30} class="md:hidden" />
  
  <!-- Top Right Flower - Desktop -->
  <FlowerDecoration position="top-right" size="lg" rotate={12} flipX class="hidden md:block" />
  
  <!-- Top Right Flower - Mobile -->
  <FlowerDecoration position="top-right" size="md" rotate={30} flipX class="md:hidden" />
  <!-- Background with gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-100 via-accent-50 to-primary-50 -z-10"></div>
  
  <!-- Decorative elements -->
  <div class="absolute inset-0 opacity-10 -z-10">
    <div class="absolute top-20 left-10 w-64 h-64 bg-primary-300 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-300 rounded-full blur-3xl"></div>
  </div>
  <div class="container mx-auto px-4 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        RSVP
      </h2>
      <div class="w-24 h-1 bg-[#560082] mx-auto mb-8"></div>
    </div>

    <!-- RSVP Button -->
    <div class="text-center mb-16">
      <a 
        href="https://withjoy.com/katie-and-clark-aug-26/rsvp" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-16 py-6 bg-[#560082] hover:bg-[#45006b] text-white text-2xl font-semibold rounded-full transition duration-200 transform hover:scale-105 shadow-xl hover:shadow-2xl"
      >
        RSVP Now
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
    
    <!-- Image -->
    <div class="w-full max-w-3xl mx-auto">
      <div class="relative transform hover:scale-102 transition-transform duration-500">
        <div class="absolute -inset-6 bg-accent-300 rounded-3xl blur-2xl opacity-20"></div>
        <div class="relative">
          <div class="relative overflow-hidden rounded-2xl border-4 border-white shadow-2xl inline-block">
            <img 
              src="/wedding-website/images/SP_0009.jpg" 
              alt="Come hang with us!" 
              class="w-full h-auto block"
              loading="lazy"
            />
            <div class="absolute bottom-6 right-6 bg-[#560082] text-white text-lg font-bold px-6 py-3 rounded-full transform rotate-3 shadow-lg">
              Come hang with us! ðŸŽ‰
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Left Flower - Desktop -->
  <FlowerDecoration position="bottom-left" size="lg" rotate={180} class="hidden md:block" />
  
  <!-- Bottom Left Flower - Mobile -->
  <FlowerDecoration position="bottom-left" size="md" rotate={-150} class="md:hidden" />
  
  <!-- Bottom Right Flower - Desktop -->
  <FlowerDecoration position="bottom-right" size="lg" rotate={180} flipX class="hidden md:block" />
  
  <!-- Bottom Right Flower - Mobile -->
  <FlowerDecoration position="bottom-right" size="md" rotate={150} flipX class="md:hidden" />
  </div>
</section>
