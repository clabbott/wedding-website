---
import FlowerDecoration from './FlowerDecoration.astro';
---

<section id="details" class="relative py-20 md:py-32 bg-white overflow-hidden">
  <!-- Top Left Flower - Desktop -->
  <FlowerDecoration position="top-left" size="lg" rotate={-12} class="hidden md:block" />
  
  <!-- Top Left Flower - Mobile -->
  <FlowerDecoration position="top-left" size="md" rotate={-30} class="md:hidden" />
  
  <!-- Top Right Flower - Desktop -->
  <FlowerDecoration position="top-right" size="lg" rotate={12} flipX class="hidden md:block" />
  
  <!-- Top Right Flower - Mobile -->
  <FlowerDecoration position="top-right" size="md" rotate={30} flipX class="md:hidden" />
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        Wedding Details
      </h2>
      <div class="w-24 h-1 bg-[#560082] mx-auto"></div>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- Ceremony Card -->
      <a 
        href="https://maps.app.goo.gl/qVSspDQC5aVpQ4zz7" 
        target="_blank" 
        rel="noopener noreferrer"
        class="block h-full bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all overflow-hidden hover:ring-2 hover:ring-[#560082] focus:outline-none focus:ring-2 focus:ring-[#560082] hover:bg-[#560082]/10"
      >
        <div class="w-full h-48 overflow-hidden">
          <img 
            src="/wedding-website/images/St-Georges-Cover-Photo-2022.png" 
            alt="St. George's Episcopal Church" 
            class="w-full h-full object-cover"
            width="800"
            height="450"
          />
        </div>
        <div class="p-8 space-y-3 text-center">
          <h3 class="text-2xl font-serif font-semibold text-neutral-900 mb-4">
            Ceremony
          </h3>
          <p class="text-neutral-700">
            <span class="font-semibold">Date:</span> Saturday, August 8, 2026
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Time:</span> 2:30 PM
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Location:</span><br/>
            St. George's Episcopal Church<br/>
            915 N Oakland St<br/>
            Arlington, VA 22203
          </p>
        </div>
      </a>
      
      <!-- Reception Card --> 
      <a 
        href="https://maps.app.goo.gl/d4JSjt2TUZsjS7Ed7" 
        target="_blank" 
        rel="noopener noreferrer"
        class="block h-full bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all overflow-hidden hover:ring-2 hover:ring-[#560082] focus:outline-none focus:ring-2 focus:ring-[#560082] hover:bg-[#560082]/10"
      >
        <div class="w-full h-48 overflow-hidden">
          <img 
            src="/wedding-website/images/church_1.JPG" 
            alt="Reception Venue - Front View" 
            class="w-full h-full object-cover"
            width="800"
            height="450"
          />
        </div>
        <div class="p-8 space-y-3 text-center">
          <h3 class="text-2xl font-serif font-semibold text-neutral-900 mb-4">
            Reception
          </h3>
          <p class="text-neutral-700">
            <span class="font-semibold">Date:</span> Saturday, August 8, 2026
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Time:</span> 4:30 PM - 9:30 PM
          </p>
          <p class="text-neutral-700">
            <span class="font-semibold">Location:</span><br/>
            River Road Unitarian Universalist Congregation<br/>
            6301 River Road<br/>
            Bethesda, MD 20817
          </p>
        </div>
      </a>
    </div>
    
    <!-- Bottom Left Flower - Desktop -->
  <FlowerDecoration position="bottom-left" size="lg" rotate={180} class="hidden md:block" />
  
  <!-- Bottom Left Flower - Mobile -->
  <FlowerDecoration position="bottom-left" size="md" rotate={-150} class="md:hidden" />
  
  <!-- Bottom Right Flower - Desktop -->
  <FlowerDecoration position="bottom-right" size="lg" rotate={180} flipX class="hidden md:block" />
  
  <!-- Bottom Right Flower - Mobile -->
  <FlowerDecoration position="bottom-right" size="md" rotate={150} flipX class="md:hidden" />
  </div>
</section>
