---
const PASSWORD = 'Arlington';
const isValidPassword = (input: string) => input === PASSWORD;

if (Astro.cookies.has('wedding-auth')) {
  const cookie = Astro.cookies.get('wedding-auth');
  if (cookie && cookie.value === PASSWORD) {
    // Already authenticated
    return;
  }
}

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const password = formData.get('password')?.toString() || '';
  
  if (isValidPassword(password)) {
    // Set cookie that expires in 30 days
    Astro.cookies.set('wedding-auth', password, {
      path: '/',
      maxAge: 60 * 60 * 24 * 30, // 30 days
      httpOnly: true,
      secure: import.meta.env.PROD,
      sameSite: 'strict'
    });
    
    // Redirect to clear the POST data
    return Astro.redirect(Astro.url.pathname);
  }
}
---

<div class="min-h-screen flex items-center justify-center bg-neutral-50 p-4">
  <div class="bg-white p-8 rounded-xl shadow-lg max-w-md w-full">
    <h1 class="text-3xl font-serif font-bold text-center mb-2">Welcome</h1>
    <p class="text-neutral-600 text-center mb-8">Please enter the password to continue</p>
    
    <form method="POST" class="space-y-4">
      <div>
        <input 
          type="password" 
          name="password" 
          placeholder="Enter password" 
          class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          required
        />
      </div>
      <button 
        type="submit" 
        class="w-full bg-primary-500 hover:bg-primary-600 text-white font-medium py-3 px-6 rounded-lg transition duration-200"
      >
        Enter
      </button>
    </form>
    
    {Astro.request.method === 'POST' && (
      <p class="mt-4 text-red-500 text-sm text-center">Incorrect password. Please try again.</p>
    )}
  </div>
</div>
